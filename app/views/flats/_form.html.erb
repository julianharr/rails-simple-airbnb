<div class="container-form">
  <h1>Add a new flat</h1>
  <%= simple_form_for @flat, html: { autocomplete: 'off' } do |f| %>
    <%= f.input :name %>
    <%= f.input :description %>
    <%= f.input :address %>
    <%= f.input :price_per_night %>
    <%= f.input :number_of_guests %>
    <%= f.input :picture_url %>
    <%= f.button :submit, class: "btn-primary" %>
    <%= f.button :button, "Cancel", type: "reset", class: "btn-danger" %>
  <% end %>
</div>

