<%= link_to 'Add a new flat', new_flat_path %>

<% @flats.each do |flat| %>
<div class="card m-5" style="width: 18rem;">
  <img class="card-img-top" src=#{<% flat.picture_url %>} alt="Card image cap">
  <div class="card-body">
      <h5 class="card-title"><%= flat.name %></h5>
      <p class="card-text"><%= flat.description %></p>
      <a href="#" class="btn btn-primary">Go somewhere</a>
      <%= link_to 'More info', flat_path(flat) %>
      <%= link_to 'Edit', edit_flat_path(flat) %>
      <%= link_to 'Remove', flat_path(flat), method: :delete, data: { confirm: 'Are you sure?' }%>
  </div>
  <% end %>
</div>
